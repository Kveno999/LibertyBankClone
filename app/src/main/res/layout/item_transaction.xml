<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageViewTransactions"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/svg_transaction"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ტრანზაქცია"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022/01/12"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>


    </LinearLayout>


    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 ლარი"
        android:layout_marginTop="16dp"
        android:layout_marginStart="100dp"
        android:textColor="@color/white"/>


</LinearLayout>