<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main">

    <ImageView
        android:layout_width="165dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:background="@drawable/liberty_logo"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:text="@string/user"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/editTextEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@drawable/background_edit_text"
            android:textColor="@color/black"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="პაროლი"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/editTextPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@drawable/background_edit_text"
            android:textColor="@color/black"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:inputType="textPassword"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="დაგავიწყდა პაროლი?"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:textColor="#A1A0A0"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>


    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:text="შესვლა"
        android:background="@drawable/background_button" />


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"

            android:layout_gravity="center_vertical"
            android:background="@drawable/background_vector_simple"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ან"
            android:textSize="16dp"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_vector_simple"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textViewGoToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="დარეგისტრირდი"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>



</LinearLayout>