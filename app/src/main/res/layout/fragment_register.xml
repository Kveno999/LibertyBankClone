<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/svg_back_button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="165dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/liberty_logo"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:text="შეიყვანეთ თქვენი მეილი"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/editTextEmailRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@drawable/background_edit_text"
            android:textColor="@color/black"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:text="პაროლი"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/editTextPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@drawable/background_edit_text"
            android:textColor="@color/black"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:text="გაიმეორეთ პაროლი"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/editTextPasswordRepeatRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@drawable/background_edit_text"
            android:textColor="@color/black"
            android:fontFamily="@font/bpg_nino_mtavruli_normal"
            android:inputType="text"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:text="რეგისტრაცია"
        android:background="@drawable/background_button" />
</LinearLayout>